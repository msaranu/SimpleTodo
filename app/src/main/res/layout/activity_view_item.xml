<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_view_item"
    tools:context="com.codepath.simpletodo.ViewItemActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:maxLines="1"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/editTaskName"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:maxLines="3"
            android:layout_weight="1"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:text="Task Due Date"
            android:maxLength="140"
            android:layout_weight="1"
            android:maxLines="1"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:inputType="text"
            android:id="@+id/editTaskDate"
            android:layout_weight="1"
            android:maxLines="1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:text="Task Description"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:id="@+id/editTaskDescription"
            android:layout_weight="1"
            android:maxLines="2"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:text="Task Priority"
            android:layout_weight="1"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:id="@+id/editTaskPriority"
            android:layout_weight="1"
            android:maxLines="1"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:text="Task Status"
            android:layout_weight="1"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:lineSpacingExtra="24sp"
            android:inputType="text"
            android:id="@+id/editTaskStatus"
            android:layout_weight="1"
            android:maxLines="1"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button android:id="@+id/back"
            android:onClick="onBackTask"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Back"
            >
        </Button>


        <Button android:id="@+id/submit"
            android:onClick="onEditTask"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Edit"
            >
        </Button>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>